{% extends "@App/layout.html.twig" %}

{% block content %}
    <div class="container">
        <h1>{{ queue.getName() }}</h1>
        
        <ul>
        {% for ticket in tickets %}
            <li><a href="/dashboard/tickets/{{ ticket.getKey() }}">{{ ticket.getSubject() }}</a> ({{ ticket.getReplyCount() }})</li>
        {% endfor %}
        </ul>
    </div>
{% endblock %}
